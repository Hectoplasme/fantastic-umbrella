.heading-1
    font-secondary()
    black()
    font-size $size-larger

.heading-2
    font-secondary()
    black()
    font-size $size-large

.heading-3
    font-secondary()
    black()
    italic()
    font-size $size-medium


.text
    font-primary()
    regular()
    font-size $size-small
    line-height 1.6
    margin-bottom 1.5rem

    +tablet()
        margin-bottom 3rem


.bold
    bold()

.header
    &, &__btn, &__title
        font-secondary()
        font-size $size-medium - 0.2rem

        +tablet()
            font-size $size-medium

    &__menu
        font-size $size-large - 0.2rem

        +tablet()
            font-size $size-large

.post__link
    font-secondary()
    display block
    padding 1.5rem 0
    letter-spacing 1px
    font-size $size-medium - 0.3rem
    text-align center
    transition color 200ms ease 250ms

    &:before
        content ''
        position absolute
        z-index -1
        bottom 0
        left 0
        width 100%
        height 100%
        background-color $c-primary
        transform scaleY(1)
        transform-origin top center

    &:after
        position absolute
        content ''
        z-index -1
        bottom 0
        left 0
        width 100%
        height 100%
        opacity 1
        background-color $c-font
        transform scaleY(0)
        transform-origin top center
        transition transform 600ms cubic-bezier(0.645, 0.045, 0.355, 1)

    &:hover
        color $c-white
        transition color 200ms ease 250ms

        &:after
            transform scaleY(1)
            transform-origin bottom center
            transition transform 600ms cubic-bezier(0.645, 0.045, 0.355, 1)



.logo
    font-secondary()
    black()
    font-size $size-medium

.menu
    .is-active
        bold()

.copyright
    font-primary()
    regular()
    font-size $size-super-tiny
