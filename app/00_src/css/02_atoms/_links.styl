.link, a
    position relative
    display inline-block

    &:before
        position absolute
        bottom -0.2rem
        left 0
        content ''
        display block
        width 100%
        height 3px
        background $c-font
        transform-origin right
        transform scaleX(0)
        transition transform 500ms ease

    &:hover
        cursor pointer

        &:before
            transform-origin left
            transform scaleX(1)

.header__menu a, input
    opacity 1

    &:before
        content none

    &:hover
        opacity 0.5
        transition opacity 200ms linear
