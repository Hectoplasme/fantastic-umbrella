.rte
    img
        margin-bottom 2rem

    p
        @extends .text

    p + p
        margin-top 1rem

    a
        bold()
        display inline
        padding-bottom 0px
        border-bottom 4px solid $c-primary
        transition all 200ms linear

        &:before
            content none

        &:hover
            padding-bottom 2px
            border-bottom 4px solid #251a28
            transition all 200ms linear
